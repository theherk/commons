[alias]
	c=commit
	cm=commit -m
	root=rev-parse --show-toplevel
	subup=submodule update --init
	superpush=push --force --tags origin refs/heads/*
	tree="log --pretty=oneline --decorate --graph"
[checkout]
	defaultRemote = origin
[commit]
	template = ~/.config/git/message
[core]
	editor = editor
	pager = delta
[delta]
	light = false
	line-numbers = false
	navigate = true
	paging = auto
[diff]
	algorithm = patience
	colorMoved = zebra
[fetch]
	prune = true
[init]
	defaultBranch = main
[interactive]
	diffFilter = delta --color-only
[merge]
	conflictstyle = diff3
[pull]
	rebase = true
