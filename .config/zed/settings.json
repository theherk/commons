{
  "assistant": {
    "version": "1",
    "default_width": 640
  },
  "chat_panel": {
    "default_width": 380
  },
  "features": {
    "copilot": false
  },

  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": false
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "theme": "Catppuccin Macchiato",
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_family": "VictorMono NF",
  "buffer_font_size": 18,
  "project_panel": {
    "default_width": 246,
    "indent_size": 16
  },
  "terminal": {
    "default_height": 420,
    // "shell": "system",
    "shell": {
      "program": "zellij-project.fish"
    },
    "toolbar": {
      "title": false
    },
    "max_scroll_history_lines": 100000
  }
}
