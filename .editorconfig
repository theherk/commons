root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,py}]
charset = utf-8

[*.el]
indent_style = space
indent_size = 2
max_line_length = 80

[*.go]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
tab_width = 4

[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

[*.{js,yaml,yml}]
indent_style = space

[*.js]
indent_size = 4

[*.json]
indent_size = 2

[*.config]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.lua]
collapse_simple_statement = Always
indent_style = space
indent_size = 2
max_line_length = 222

[*.xml]
max_line_length = 120
